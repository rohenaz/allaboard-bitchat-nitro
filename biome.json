{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "useEditorconfig": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "noUndeclaredVariables": "error",
        "useExhaustiveDependencies": "warn"
      },
      "suspicious": {
        "noDebugger": "error",
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["warn", "error", "info", "debug"]
          }
        },
        "noArrayIndexKey": "warn"
      },
      "style": {
        "useTemplate": "error",
        "useConst": "error",
        "useShorthandAssign": "error",
        "useNodejsImportProtocol": "off"
      },
      "a11y": {
        "useAltText": "warn",
        "useKeyWithClickEvents": "warn",
        "useValidAnchor": "error",
        "noSvgWithoutTitle": "off",
        "useButtonType": "warn",
        "useSemanticElements": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "trailingCommas": "none"
    }
  },
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.git/**",
      "**/build/assets/**"
    ]
  }
}
